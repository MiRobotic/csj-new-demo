<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GlobalChildBackgroundImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_global_title" />

    <LinearLayout
        android:layout_width="1040dp"
        android:layout_height="720dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_70dp"
        android:background="@drawable/story_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dm_30dp"
            android:textColor="#393939"
            android:textSize="@dimen/dm_24sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="@dimen/dm_800dp"
            android:layout_height="650dp"
            android:layout_gravity="center_horizontal"
            android:scrollbars="vertical"
            android:textSize="@dimen/dm_18sp" />

    </LinearLayout>

</LinearLayout>
