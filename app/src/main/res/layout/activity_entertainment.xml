<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GlobalChildBackgroundImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_global_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dm_80dp"
        android:layout_marginEnd="@dimen/dm_40dp"
        android:layout_marginStart="@dimen/dm_40dp"
        android:layout_marginTop="@dimen/dm_40dp"
        android:orientation="horizontal">

        <include
            layout="@layout/layout_global_chat_admin"
            android:layout_width="680dp"
            android:layout_height="780dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dm_40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ib_storytelling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/entertainment_story_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dm_30dp"
                    android:layout_marginStart="@dimen/dm_50dp"
                    android:text="@string/tellstory"
                    android:textColor="@color/entertainment_text_color"
                    android:textSize="26sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ib_dance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/entertainment_dance_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dm_30dp"
                    android:layout_marginStart="@dimen/dm_50dp"
                    android:text="@string/dance"
                    android:textColor="@color/entertainment_text_color"
                    android:textSize="26sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ib_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/entertainment_song_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dm_30dp"
                    android:layout_marginStart="@dimen/dm_50dp"
                    android:text="@string/sing"
                    android:textColor="@color/entertainment_text_color"
                    android:textSize="26sp" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
