<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/VerticalGlobalChildBackgroundImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_global_title" />

    <LinearLayout
        android:layout_width="1040dp"
        android:layout_height="720dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:background="@drawable/ic_setting_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_work_content_height"
            android:layout_margin="@dimen/vertical_content_maigin"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/bt_chatview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_20dp"
                android:background="@color/deepskyblue"
                android:padding="@dimen/dm_10dp"
                android:text="@string/chatview"
                android:textColor="@color/white"
                android:textSize="@dimen/dm_24sp" />

            <Button
                android:id="@+id/bt_face_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_20dp"
                android:background="@color/deepskyblue"
                android:padding="@dimen/dm_10dp"
                android:text="@string/face_data_sync"
                android:textColor="@color/white"
                android:textSize="@dimen/dm_24sp"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
