<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="722dp"
    android:layout_height="414dp"
    android:background="@drawable/evaluate_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_50dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/dm_22sp" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dm_40dp"
        android:layout_marginStart="@dimen/dm_40dp"
        android:layout_marginTop="@dimen/dm_80dp"
        android:progressDrawable="@drawable/horizontal_progress_bar" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/dm_50dp"
        android:layout_marginTop="@dimen/dp_10" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_70dp"
        android:background="@drawable/dialog_btn_bg"
        android:stateListAnimator="@anim/button_press"
        android:text="@string/cancel"
        android:textColor="@color/white" />
</LinearLayout>
