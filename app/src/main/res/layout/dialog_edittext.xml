<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="280dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_25dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dm_18sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="@dimen/dm_5dp"
        android:layout_marginEnd="@dimen/dm_30dp"
        android:layout_marginStart="@dimen/dm_30dp"
        android:layout_marginTop="@dimen/dm_20dp">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit2_bg"
            android:gravity="top"
            android:padding="@dimen/dm_10dp"
            android:textColor="#7d7d7d"
            android:textColorHint="#adadad"
            android:textSize="@dimen/dm_16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="@dimen/dm_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#adadad"
                android:textSize="@dimen/dm_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#adadad" />

            <TextView
                android:id="@+id/tv_max_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="#adadad" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dm_5dp"
        android:layout_marginStart="@dimen/dm_5dp"
        android:background="#dcdcdc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/dm_5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/bt_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="取消"
            android:textColor="#535353"
            android:textSize="@dimen/dm_18sp" />

        <View
            android:layout_width="@dimen/dm_1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc" />

        <Button
            android:id="@+id/bt_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="确定"
            android:textColor="#56d4d2"
            android:textSize="@dimen/dm_23sp" />
    </LinearLayout>

</LinearLayout>
