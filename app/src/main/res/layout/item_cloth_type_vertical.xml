<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="328dp"
    android:gravity="center"
    android:padding="@dimen/dm_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/commodity_classification_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_clothing"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="@dimen/dm_5dp" />

        <TextView
            android:id="@+id/tv_item_clothing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:paddingEnd="@dimen/dm_5dp"
            android:paddingStart="@dimen/dm_5dp"
            android:singleLine="true"
            android:textColor="#121212"
            android:textSize="@dimen/dm_20sp" />
    </LinearLayout>


</FrameLayout>